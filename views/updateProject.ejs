<%- include('partials/header_backoff.ejs') %>
        <main>

            <!-- FORM 1 -->

            <div class="container mt-5 d-flex justify-content-center align-items-center">

                <form id="updateFormProject" action="/admin/projectUpdated" method="POST"> 
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                    <!-- LINKED THUMBNAIL -->
                    <label class="text-white" for="linkedThumbnail"><b>Sélectionner thumbnail associé :</b></label>
                    <select 
                        class="form-select mb-3" 
                        id="linkedThumbnail" 
                        name="linkedThumbnail" 
                        aria-label="Default select example" required>
                        <option value="<%= project.thumbnail._id %>">
                            <%= project.thumbnail.title %>
                        </option>
                    </select>
                    
                    <br><br>

                    <h2 class="mb-4">1 | Entête projet - texte </h2>
                    <img class="section-reference" src="https://site-regis.s3.eu-west-3.amazonaws.com/public/img-divers/entete+projet.png" alt="entete projet">
                    <br><br>
                    
                    <!-- TITRE PROJET --> 
                    <div class="input-group mb-3">
                        <label class="input-group-text" for="project_title"><b>Nom du projet</b></label>
                        <input 
                            type="text" 
                            class="form-control" 
                            id="project_title" 
                            name="project_title"
                            value="<%= project.project_title %>"
                            required
                            > 
                    </div> 
                    <br>
                    <!-- DIRECTOR -->
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="director_name"><b>Directeur</b></span>
                        <input 
                            type="text" 
                            class="form-control" 
                            id="director" 
                            name="director" 
                            aria-label="Sizing example input" 
                            aria-describedby="inputGroup-sizing-default"
                            value="<%= project.director %>"
                            required
                            >
                    </div>
                    <br>      
                    <!-- OTHER CONTRIBUTORS -->
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="other_contributors_"><b>Autres contributeurs (optionnel)</b></span>
                        <input 
                            type="text" 
                            class="form-control" 
                            id="other_contributors" 
                            name="other_contributors" 
                            aria-label="Sizing example input" 
                            aria-describedby="inputGroup-sizing-default"
                            value="<%= project.other_contributors %>"
                        >
                    </div>
                    <br>  
                    <!-- PRODUCTOR -->
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="productor"><b>Producteur (optionnel)</b></span>
                        <input 
                            type="text" 
                            class="form-control" 
                            id="productor" 
                            name="productor" 
                            aria-label="Sizing example input" 
                            aria-describedby="inputGroup-sizing-default"
                            value="<%= project.productor %>"
                        >
                    </div>
                    <hr>
                    <br>
                    <!-- VIDEOS --> 
                    <h2 class="mb-4"> 2 | Vimeo </h2>
                    <p class="text-white"><b>Liens Vimeos - Video principale (entête) + autres si besoin | séparer les liens par des virgules | max 6 :</b></p>
                    <div class="input-group mb-3">
                        <label class="input-group-text" for="array_vids"><b>Vidéos :</b></label>
                        <input 
                            type="text" 
                            class="form-control" 
                            id="array_vids" 
                            name="array_vids"
                            placeholder="https://player.vimeo.com/video/341833479, https://player.vimeo.com/video/341833479,..."
                            value="<%= project.array_vids %>"
                        >
                    </div> 
                    <br>
                    <!-- VIDEO 2 DESCRIPTION -->
                    <div class="input-group mb-3">
                        <label class="text-white" for="video2_description"><b>Texte sous 2e vidéo (optionnel) :</b></label>
                        <textarea name="video2_description"  id="video2_description"  cols="100" rows="4"><%= project.video2_description%></textarea>
                    </div>
                    <br>
                    <!-- VIDEO 3 DESCRIPTION -->
                    <div class="input-group mb-3">
                        <label class="text-white" for="video3_description"><b>Texte sous 3e vidéo (optionnel) :</b></label>
                        <textarea name="video3_description"  id="video3_description"  cols="100" rows="4"><%= project.video3_description%></textarea>
                    </div>
                    <br>
                    <!-- VIDEO 4 DESCRIPTION -->
                    <div class="input-group mb-3">
                        <label class="text-white" for="video4_description"><b>Texte sous 4e vidéo (optionnel) :</b></label>
                        <textarea name="video4_description"  id="video4_description"  cols="100" rows="4"><%= project.video4_description%></textarea>
                    </div>
                    <br>
                    <!-- VIDEO 5 DESCRIPTION -->
                    <div class="input-group mb-3">
                        <label class="text-white" for="video5_description"><b>Texte sous 5e vidéo (optionnel) :</b></label>
                        <textarea name="video5_description"  id="video5_description"  cols="100" rows="5"><%= project.video5_description%></textarea>
                    </div>
                    <br>
                    <!-- VIDEO 6 DESCRIPTION -->
                    <div class="input-group mb-3">
                        <label class="text-white" for="video6_description"><b>Texte sous 6e vidéo (optionnel) :</b></label>
                        <textarea name="video6_description"  id="video6_description"  cols="100" rows="5"><%= project.video6_description%></textarea>
                    </div>
                    <br>
                    <!-- VIDEO 7 DESCRIPTION -->
                    <div class="input-group mb-3">
                        <label class="text-white" for="video7_description"><b>Texte sous 7e vidéo (optionnel) :</b></label>
                        <textarea name="video7_description"  id="video7_description"  cols="100" rows="5"></textarea>
                    </div>
                    <br>
                    <!-- GALLERY | multiple uploads --> 
                    <h2 class="mb-4">3 | Galerie de visuels + textes :</h2>
                    <div>
                        <img class="section-reference" src="https://site-regis.s3.eu-west-3.amazonaws.com/public/img-divers/template1-min.png" alt="template 1">
                        <img class="section-reference" src="https://site-regis.s3.eu-west-3.amazonaws.com/public/img-divers/template2-min.png" alt="template 2">
                    </div>
                    <br>
                    <p class="text-white"><b>Images (Liens S3) | Importer les img dans l'ordre d'apparition dans la page et les séparer les liens par des virgules (sauf la dernière) : </b></p>
                    <div class="input-group mb-3">
                        <label class="text-white" for="gallery"><b>max 16 : </b></label>
                        <textarea placeholder="https://AMAZONBUCKET.s3.eu-west-3.amazonaws.com/FOLDER/IMG_1.jpg, 
        https://AMAZONBUCKET.s3.eu-west-3.amazonaws.com/FOLDER/IMG_2.jpg, ..." name="gallery"  id="gallery" cols="100" rows="10"><%= project.gallery%></textarea>
                    </div> 
                    <br>
                    <!-- DESCRIPTION VISUALS - 1 -->
                    <p class="text-white"><b>Texte accompagnant 1er rang de visuels (optionnel) :</b></p>
                    <div class="input-group mb-3">
                        <label class="text-white" for="description_1"><b>row 1</b></label>
                        <textarea name="description_1"  id="description_1"  cols="100" rows="8"><%= project.gallery_row_1_description%></textarea>
                    </div>
                    <br>
                    <!-- DESCRIPTION VISUALS - 2 -->
                    <p class="text-white"><b>Texte accompagnant 2e rang de visuels (optionnel) :</b></p>
                    <div class="input-group mb-3">
                        <label class="text-white" for="description_2"><b>row 2</b></label>
                        <textarea name="description_2"  id="description_2"  cols="100" rows="8"><%= project.gallery_row_2_description%></textarea>
                    </div>
                    <br>    
                    <!-- DESCRIPTION VISUALS - 3 -->
                    <p class="text-white"><b>Texte accompagnant 3e rang de visuels (optionnel) :</b></p>
                    <div class="input-group mb-3">
                        <label class="text-white" for="description_3"><b>row 3</b></label>
                        <textarea name="description_3"  id="description_3"  cols="100" rows="8"><%= project.gallery_row_3_description%></textarea>
                    </div>
                    <br> 
                    <!-- DESCRIPTION VISUALS - 4 -->
                    <p class="text-white"><b>Texte accompagnant 4e rang de visuels (optionnel) :</b></p>
                    <div class="input-group mb-3">
                        <label class="text-white" for="description_4"><b>row 4</b></label>
                        <textarea name="description_4"  id="description_4"  cols="100" rows="8"><%= project.gallery_row_4_description%></textarea>
                    </div>
                    <br> 
                    <!-- SEND -->
                    <div class="d-flex justify-content-center align-items-center">
                        <input type="hidden" name="identifier" value="<%= project._id %>">
                        <input type="submit" class="btn btn-outline-light btn-lg"  value="Update">
                    </div>
                </form>
                
            </div>
        </main>
    </body>
</html>
