                <label for="bioText">Texte bio :</label>
                <textarea id="text" name="text" rows="20" cols="100"><%= biography.text %></textarea>
  
                <label for="photo">Photo</label>
                <input type="text" name="pic" id="pic" size="100" value="<%= biography.pic %>"> 
             
                <label for="mail">mail</label>
