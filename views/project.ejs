                                        alt="visuel pour <%= project.project_title %>" 
                                        data-action="zoom"
                                    >
                                </div>

                            <% }  else { %>

                                <div class="col-sm-6 col-xs-12">
                                    <video 
                                        class="img-fluid"  
                                        autoplay playsinline muted loop 
                                        src="<%= project.gallery[index] %>"  
