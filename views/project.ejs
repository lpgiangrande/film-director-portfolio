                    <div class="video-iframe d-flex justify-content-center mb-3">
                        <iframe 
                            class="resp-iframe" 
                            title="vimeo-player" 
                            src="<%= project.array_vids[0]%>"  
                            frameborder="0" 
                            allowfullscreen>
                        </iframe>
